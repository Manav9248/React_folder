<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>

    <div class="main w-full min-h-screen bg-zinc-900">

        <!-- Main form  -->
      <div class="form p-10 text-white">

        <!-- create route declare here -->
        <form action="/create" 
        method="post">

  <input class = "block px-5 py-2 bg-zinc-800 w-full rounded-lg outline-none "

 type="text " placeholder="Title goes here.." name="title"/>

 <textarea class ="block px-5 py-2 bg-zinc-800 w-full resize-none mt-2 rounded-lg outline-none"  
        
 placeholder="write your task details here..." name="details"></textarea>

        <input type="submit" value="Create Task"
        class="mt-2 bg-blue-600 px-5 py-2 rounded-md hover:bg-blue-900">

        </form>
      </div>

      <!-- Main Tasks  -->
      <div class="tasks p-10 flex gap-3 flex-wrap">
        
        <% if(files.length>0) {%>
           <% files.forEach((val)=>{ %>

                      <!-- task1 -->
   <div class="task  min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
        
    <div>
      <h1 class="text-white text-3xl tracking-tighter"><%=val%></h1>
      <a class="text-blue-500 inline-block mt-3" href="/file/<%=val%>">Read more</a>

      <a class="text-zinc-500 font-semibold ml-[9rem]" href="/edit/<%=val %>">Edit Filename</a>

     <a href="/delete/<%=val%>" class="flex justify-center mt-[1rem] ">

        <img class="w-[3rem] h-[3rem] font-blue-600 "
        src="/images/icons8-delete-100.png" alt="delete">
        
      </a>
    </div>

    
      </div>
                <% }) %>
         
            <% } else { %>
                <h2 class="text-zinc-600">No Task yet</h2>
           <% } %>

       
          
      </div>


    </div>
  </body>
</html>
