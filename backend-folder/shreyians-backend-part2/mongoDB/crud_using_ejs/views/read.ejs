<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read file</title>
   
    <link rel="stylesheet" href="/stylesheets/style.css">
    
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
 
 <%  if(users && users.length>0){ %>


    <div class="h-screen w-full bg-zinc-900 p-10  text-white">

      <a class="text-blue-500 ml-3 hover:text-blue-800"
      href="/">Back To Home</a>
        
    <h1 class="text-3xl tracking-tighter mb-4 ml-2">All Users</h1>

    <div class="users flex gap-3 flex-wrap">

      <% users.forEach((val)=>{ %>

         <div class="user w-72 p-4 bg-zinc-800 rounded-lg">

            <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">

               <img class="w-full h-full object-cover object-center"
                src="<%= val.image %>" alt="images">
            </div>
       
            <h3 class="text-xl mt-3 tracking-tighter"><%= val.name%></h3>
       
            <h5 class="text-zinc-500"><%= val.email %></h5>
       
            <div class="flex gap-3 mt-10">
               <a class="text-zinc-200" href="/edit/<%=val._id%> ">Edit User</a>
               <a class="text-red-500" href="delete/<%=val._id%>">Delete User</a>
            </div>
       
               </div>
       


    <%  }) %>

    </div>
    

  </div>

  <% }else  { %>
         <div class="min-h-screen w-full bg-zinc-900 p-10  text-white">

            <a class="text-blue-500 ml-3 hover:text-blue-800"
            href="/">Back To Home For Create User</a>

              <div class="h-full w-full flex justify-center">

      <h1 class="text-4xl tracking-tighter mb-4 underline underline-decoration-2 ml-2 mt-5">No Users Yet</h1>

              </div>
          

          </div>

       <% } %>

</body>
</html>